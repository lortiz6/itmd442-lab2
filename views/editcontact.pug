extends layout

block content
  link(rel='stylesheet', href='/css/style.css')
  h1 Edit Contact
  form(method='POST', action=`/contacts/${contact.id}?_method=PUT`)
    label First Name: 
    input(type='text', name='firstName', value=contact.firstName, required)
    label Last Name: 
    input(type='text', name='lastName', value=contact.lastName, required)
    label Email Address: 
    input(type='text', name='email', value=contact.email)
    label Notes: 
    textarea(name='notes')= contact.notes
    button(type='submit') Save
    a(href='/contacts').btn.btn-cancel Cancel